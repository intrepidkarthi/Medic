<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_marginTop="20dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:text="Patient Name :" >
                </TextView>

                <TextView
                    android:id="@+id/patient_name"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_weight="1"
                    android:text="Karthik" >
                </TextView>
            </TableRow>

            <TableRow android:layout_marginTop="20dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:text="Doctor Name  :" >
                </TextView>

                <TextView
                    android:id="@+id/doctor_name"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_weight="1"
                    android:text="Jessi" >
                </TextView>
            </TableRow>

            <TableRow android:layout_marginTop="20dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:text="Prescription :" >
                </TextView>

                <EditText
                    android:id="@+id/prescription"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    
                    android:textSize="15sp" >
                </EditText>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table_title"
            android:layout_marginTop="20dip"
            android:orientation="horizontal"
            android:weightSum="10" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="5"
                android:gravity="center"
                android:maxLength="40"
                android:text="Tablet"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="2"
                android:gravity="center"
                android:maxLength="3"
                android:text="Mg"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="3"
                android:text="M"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="3"
                android:text="N"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="1"
                android:text="E"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            android:weightSum="10" >

            <AutoCompleteTextView
                android:id="@+id/tablet_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="4"
                android:maxLength="40" >
            </AutoCompleteTextView>

            <EditText
                android:id="@+id/strength"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1.5"
                android:maxLength="3" >
            </EditText>

            <EditText
                android:id="@+id/morning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1.5"
                android:maxLength="3" >
            </EditText>

            <EditText
                android:id="@+id/afternoon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1.5"
                android:maxLength="3" >
            </EditText>

            <EditText
                android:id="@+id/evening"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1.5"
                android:maxLength="1" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            android:weightSum="10" >

            <EditText
                android:id="@+id/tablet2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_weight="4"
                android:maxLength="40" >
            </EditText>

            <EditText
                android:id="@+id/strength2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1.5"
                android:maxLength="3" >
            </EditText>

            <EditText
                android:id="@+id/morning2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1.5"
                android:maxLength="3" >
            </EditText>

            <EditText
                android:id="@+id/afternoon2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1.5"
                android:maxLength="3" >
            </EditText>

            <EditText
                android:id="@+id/evening2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1.5"
                android:maxLength="1" >
            </EditText>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageButton1"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/plus" />

        <Button
            android:id="@+id/send"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:background="@color/actionbar_color"
            android:clickable="true"
            android:layout_gravity="center"
            android:text="Send"
            android:textColor="@android:color/white" >
        </Button>

    </LinearLayout>

</ScrollView>